<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:configChanges="orientation|keyboardHidden|screenSize"
        tools:context=".MainActivity" android:id="@+id/coordinatorLayout">


    <EditText
            android:layout_width="267dp"
            android:layout_height="47dp"
            android:inputType="textUri"
            android:text="Input URL"
            android:ems="10"
            android:id="@+id/editImageUrl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="340dp" android:layout_marginStart="72dp"
            app:layout_constraintHorizontal_bias="0.0"
    />
    <Button
            android:text="Save"
            android:layout_width="wrap_content"
            android:enabled="false"
            android:layout_height="wrap_content" android:id="@+id/buttonSavePicture"
            android:layout_marginEnd="96dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="420dp"/>
    <ImageView
            android:layout_width="265dp"
            android:layout_height="279dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="73dp" android:layout_marginEnd="36dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp"/>
    <Button
            android:text="Load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLoadUrl"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="420dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="84dp"/>
    <Button
            android:text="Prev"
            android:layout_width="30dp"
            android:layout_height="95dp" android:id="@+id/buttonPrev"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="187dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="449dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp" android:layout_marginEnd="356dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Next"
            android:layout_width="30dp"
            android:layout_height="95dp" android:id="@+id/buttonNext"
            android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="357dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="449dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="187dp"/>
    <ListView
            android:id="@+id/listview_url"
            android:layout_width="334dp"
            android:layout_height="159dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="39dp" android:layout_marginEnd="19dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="485dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>